<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>@ViewBag.Title</title>
    </head>
    <body>
        <h1>@ViewBag.Title</h1>
        <div>
            @using (Html.BeginForm("AlterarDadosAlterar", "MenuCliente", FormMethod.Post))
            {
                @Html.ValidationSummary(true)
                <fieldset>
                    Nome: <input type="text" name="user" id="user" value=ViewBag.nome required />
                    <br>
                    Password: <input type="password" name="password" id="password" value=ViewBag.password required />
                    <br>
                    Email: <input type="text" name="email" id="email" value=ViewBag.email required />
                    <br>
                    Morada: <input type="text" name="morada" id="morada" value=ViewBag.morada required />
                    <br>
                    Telefone: <input type="text" name="telefone" id="telefone" value=ViewBAg.telefone required />
                </fieldset>
                <input type="submit" value="Alterar" />
                <button type="button" onclick="location.href='@Url.Action("Cancelar","Cliente")'">Cancelar</button>
            }
        </div>
    </body>
</html>